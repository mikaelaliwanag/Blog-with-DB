<form action="/compose" method="POST">

  <div class="form-group">
    <label>Title:</label>
    <input type="text" name="entryTitle" class="form-control" size=140>
  </div> 

  <div class="form-group">
    <label>Entry:</label>
    <textarea class="form-control" name="entryBody" rows="7" cols="143"></textarea>
